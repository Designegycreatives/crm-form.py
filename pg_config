set -e
PGBINROOT="/usr/lib/postgresql/"
#redhat# PGBINROOT="/usr/pgsql-"
LATEST_SERVER_DEV='ls -v $PGBINROOT*/bin/pg_config2>dev/null|tail -n1`

if [ -n "$LATEST_SERVER_DEV" ]; then
    exec "$LATEST_SERVER_DEV" "$@"
    
else
   if [ -x /usr/bin/pg_config.libpq-dev ]; then
      exec /usr/bin/pg_config.libpq-dev "$@"
   else
     echo "You need to install postgresql-server-dev-NN for building a server-side extension or libpq-dev for building a client-side application."
>&2
     exit 1
   fi   
fi   
